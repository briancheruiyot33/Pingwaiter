{
  "name": "Laravel DevContainer",
  "dockerFile": "Dockerfile",

  // Forward ports (Laravel = 8000, Vite = 5173)
  "forwardPorts": [8000, 5173],

  // Run after container builds
  "postCreateCommand": "composer install && npm install && cp -n .env.example .env && php artisan key:generate && touch database/database.sqlite",

  // Codespaces/VSCODE extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "onecentlin.laravel-blade",
        "onecentlin.laravel5-snippets",
        "amiralizadeh9480.laravel-extra-intellisense",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  // Optional MySQL service (disabled by default)
  "runServices": [],
  "services": {
    "mysql": {
      "image": "mysql:8.0",
      "restart": "unless-stopped",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "password",
        "MYSQL_DATABASE": "laravel",
        "MYSQL_USER": "laravel",
        "MYSQL_PASSWORD": "laravel"
      },
      "ports": ["3306:3306"]
    }
  }
}